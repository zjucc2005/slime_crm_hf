<div class="card">
    <div class="card-header">
        <h5><%= model_icon('Hospital') %> <%= mt(:hospital) %></h5>
    </div>
    <div class="card-body p-3">
        <%= form_tag request.path, :method => :get do %>
            <div class="row">
                <div class="col-3 form-group">
                    <%= text_field_tag :name, params[:name], :class => 'form-control', :placeholder => mt(:hospital, :name) %>
                </div>
                <div class="col-3 form-group">
                    <%= text_field_tag :province, params[:province], :class => 'form-control', :placeholder => mt(:hospital, :province) %>
                </div>
                <div class="col-3 form-group">
                    <%= select_tag :level, options_for_select(hospital_level_options, params[:level]), :prompt => mt(:hospital, :level) , :class => 'form-control select2' %>
                </div>

                <div class="col-3 form-group">
                    <%= button_tag :type => 'submit', :class => 'btn btn-default btn-form-control w-100' do %>
                        <%= fa_icon_tag('search') %> <%= content_tag :span, t('action.search'), :class => 'd-lg-inline d-none' %>
                    <% end %>
                </div>
            </div>
        <% end %>

        <table class="table table-sm table-striped card-text">
            <thead>
            <tr>
                <th><%= mt(:hospital, :id) %></th>
                <th><%= mt(:hospital, :name) %></th>
                <th><%= mt(:hospital, :province) %></th>
                <th><%= mt(:hospital, :level) %></th>
                <th><%= mt(:hospital, :created_at) %></th>
            </tr>
            </thead>
            <tbody>
            <% @hospitals.each do |hospital| %>
                <tr>
                    <td><%= content_tag :span, "# #{hospital.uid}", :class => 'text-gray' %></td>
                    <td><%= hospital.name %></td>
                    <td><%= hospital.province %></td>
                    <td><%= hospital.level %></td>
                    <td><%= hospital.created_at.strftime('%F %T') %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <%= will_paginate @hospitals %>
    </div>
</div>