<div class="row">
    <div class="col-lg-3 col-6 mb-3">
        <div class="card summary-item">
            <div class="symbol blue">
                <%= fa_icon_tag('user-circle') %>
            </div>
            <div class="value">
                <h1 class="count"><%= @total_experts %></h1>
                <p><%= t('dashboard.total_experts') %></p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-6 mb-3">
        <div class="card summary-item">
            <div class="symbol yellow">
                <%= fa_icon_tag('bank') %>
            </div>
            <div class="value">
                <h1 class="count"><%= @total_signed_companies %></h1>
                <p><%= t('dashboard.total_signed_companies') %></p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-6 mb-3">
        <div class="card summary-item" data-toggle="tooltip" title="新专家任务总数：<%= @total_tasks_of_new_expert %>">
            <div class="symbol red">
                <%= fa_icon_tag('tags') %>
            </div>
            <div class="value">
                <h1 class="count"><%= @total_tasks %></h1>
                <p><%= t('dashboard.total_tasks') %><i class="fa fa-caret-down"></i></p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-6 mb-3">
        <div class="card summary-item">
            <div class="symbol purple">
                <%= fa_icon_tag('clock-o') %>
            </div>
            <div class="value">
                <h1 class="count"><%= @total_charge_duration_hour %></h1>
                <p><%= t('dashboard.total_charge_duration_hour') %></p>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip(); 
    });
</script>
