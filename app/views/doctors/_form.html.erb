<%= model_error_tag(@doctor) %>
<div class="badge badge-info mb-3 px-4"><%= t(:base_info) %></div>
<div class="row border-bottom mb-3">

    <div class="col-12 form-group">
        <span class="badge badge-light"><%= show_creator(@doctor) %></span>
        <span class="badge badge-light"><%= show_timestamps(@doctor) %></span>
    </div>

    <div class="col-lg-3 col-6 form-group">
        <%= f.label :last_name, mt(:candidate, :name) %><span class="text-red">*</span>
        <div class="form-group-range">
            <div class="form-group-range-input">
                <%= f.text_field :last_name, :required => true, :class => 'form-control', :placeholder => "#{mt(:candidate, :last_name)}*" %>
            </div>
            <div class="form-group-range-input">
                <%= f.text_field :first_name, :class => 'form-control', :placeholder => mt(:candidate, :first_name) %>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :gender %>
        <%= f.select :gender, Candidate::GENDER.to_a.map(&:reverse), { :include_blank => false }, :class => 'form-control select2' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :date_of_birth %>
        <%= f.text_field :date_of_birth, :value => @doctor.date_of_birth.try(:strftime, '%F') ,:class => 'form-control datepicker', :placeholder => 'yyyy-mm-dd' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :phone %><span class="text-red">*</span>
        <div class="input-group">
            <%= f.text_field :phone, :required => true, :class => 'form-control' %>
            <div class="input-group-append">
                <span class="input-group-text d-flex fa fa-search" onclick="showPhoneLocation('candidate_phone');"></span>
            </div>
        </div>
        <%= content_tag :span, nil, :id => 'candidate_phone_location', :class => 'phone-location' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :phone1 %>
        <div class="input-group">
            <%= f.text_field :phone1, :class => 'form-control' %>
            <div class="input-group-append">
                <span class="input-group-text d-flex fa fa-search" onclick="showPhoneLocation('candidate_phone1');"></span>
            </div>
        </div>
        <%= content_tag :span, nil, :id => 'candidate_phone1_location', :class => 'phone-location' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :city %><span class="text-red">*</span>
        <%= f.text_field :city, :required => true, :class => 'form-control autocomplete-city' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :title, mt(:candidate, :educate_title) %>
        <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :email %><span class="text-red">*</span>
        <%= f.email_field :email, :required => true, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :email1 %>
        <%= f.email_field :email1, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :wechat %>
        <%= f.text_field :wechat, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :data_channel %><span class="text-red">*</span>
        <%= f.select :data_channel, candidate_data_channel_options, { :include_blank => default_prompt },
                     :required => true, :class => 'form-control select2' %>
    </div>
    <div class="col-12 form-group">
        <%= f.label :file %>
        <%= link_to @doctor.file.url do %><%= fa_icon_tag('download') %> <%= t(:file) %><% end if @doctor.file.present? %>
        <%= f.file_field :file, :class => 'form-control-file' %>
    </div>
</div>

<div class="row border-bottom mb-3">
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :is_available %><span class="text-red">*</span>
        <%= f.select :is_available, candidate_is_available_options, { :include_blank => false }, :class => 'form-control select2' %>
    </div>
    <div class="col-lg-9 col-6"></div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :cpt %><span class="text-red">*</span>
        <%= f.number_field :cpt, :required => true, :min => 0, :step => 1, :value => @doctor.cpt || 0, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :currency %><span class="text-red">*</span>
        <%= f.select :currency, currency_options, { :include_blank => false }, :class => 'form-control select2' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :cpt_face_to_face %>
        <%= f.number_field :cpt_face_to_face, :min => 0, :step => 1, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :inquiry %>
        <%= f.number_field :inquiry, :min => 0, :step => 1, :class => 'form-control' %>
    </div>
    <div class="col-12 form-group">
        <%= f.label :expertise %>
        <%= f.text_area :expertise, :class => 'form-control', :rows => 2 %>
    </div>
    <div class="col-12 form-group">
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'form-control', :rows => 4 %>
    </div>
</div>

<div class="badge badge-info mb-3 px-4"><%= t(:work_experience) %></div>
<% work_exp = @doctor.experiences.work.first %>
<div class="row border-bottom mb-3">
    <div class="col-3 form-group">
        <%= label_tag :org_cn, mt(:candidate_experience, :hospital) %><span class="text-red">*</span>
        <%= text_field_tag :'work_exp[org_cn]',  work_exp.try(:org_cn), :required => true, :class => 'form-control' %>
    </div>
    <div class="col-3 form-group">
        <%= label_tag :department, mt(:candidate_experience, :department) %>
        <%= text_field_tag :'work_exp[department]', work_exp.try(:department), :class => 'form-control' %>
    </div>
    <div class="col-3 form-group">
        <%= label_tag :title, mt(:candidate_experience, :title) %>
        <%= text_field_tag :'work_exp[title]', work_exp.try(:title), :class => 'form-control' %>
    </div>
    <div class="col-12 form-group">
        <%= label_tag :description, mt(:candidate_experience, :description) %>
        <%= text_area_tag :'work_exp[description]', work_exp.try(:description), :class => 'form-control', :rows => 3 %>
    </div>
</div>

<script>
    $('.autocomplete-city').autocomplete({ source: '/location_data/autocomplete_city.json', delay: 500 });
</script>