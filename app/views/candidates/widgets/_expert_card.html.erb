    <%= fa_icon_tag('drivers-license-o') %> <%#= t(:expert_card) %>
</button>
<div class="dropdown-menu">
    <% { finished: '已结束' }.each do |key, val| %>
        <%= link_to val, 'javascript:void(0);', class: 'dropdown-item', onclick: "batchUpdateProjectStatus(#{option[1]}, #{uid});" %>
    <% end %>
