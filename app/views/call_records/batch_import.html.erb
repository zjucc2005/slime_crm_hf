<div class="card">
    <div class="card-header">
        <h5><%= fa_icon_tag('phone') %> <%= t(:batch_import) %></h5>
        <%= link_to fa_icon_tag('close'), call_records_path, :class => 'card-header-close' %>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm table-striped border nowrap card-text">
                <thead>
                <tr>
                    <th><%= t(:error_message) %></th>
                </tr>
                </thead>
                <tbody>
                <% @errors.each do |err| %>
                    <tr>
                        <td><%= err %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>