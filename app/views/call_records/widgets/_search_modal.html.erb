<div id="search_wrapper">
    <%= button_tag :type => 'button', :class => 'btn btn-default', :data => { :toggle => 'modal', :target => '#searchModal'} do %>
        <%= fa_icon_tag('search') %> <%= content_tag :span, t('action.search'), :class => 'd-lg-inline d-none' %>
    <% end %>

    <div id="searchModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><%= t('action.search') %></h4>
                    <button type="button" data-dismiss="modal" class="close">&times;</button>
                </div>

                <%= form_tag call_records_path, :method => :get do %>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-6 col-12 form-group">
                                <%= label_tag :created_at, mt(:call_records, :created_at) %>
                                <div class="form-group-range">
                                    <div class="form-group-range-input">
                                        <%= text_field_tag :created_at_ge, params[:created_at_ge], :class => 'form-control datepicker', :placeholder => t(:begin) %>
                                    </div>
                                    <span class="form-group-range-divider"><i class="fa fa-arrow-right"></i></span>
                                    <div class="form-group-range-input">
                                        <%= text_field_tag :created_at_le, params[:created_at_le], :class => 'form-control datepicker', :placeholder => t(:end) %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-12 form-group">
                                <%= label_tag :updated_at, mt(:call_records, :updated_at) %>
                                <div class="form-group-range">
                                    <div class="form-group-range-input">
                                        <%= text_field_tag :updated_at_ge, params[:updated_at_ge], :class => 'form-control datepicker', :placeholder => t(:begin) %>
                                    </div>
                                    <span class="form-group-range-divider"><i class="fa fa-arrow-right"></i></span>
                                    <div class="form-group-range-input">
                                        <%= text_field_tag :updated_at_le, params[:updated_at_le], :class => 'form-control datepicker', :placeholder => t(:end) %>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :name, mt(:call_record, :name) %>
                                <%= text_field_tag :name, params[:name], :class => 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :phone, mt(:call_record, :phone) %>
                                <%= text_field_tag :phone, params[:phone], :class => 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :company, mt(:call_record, :company) %>
                                <%= text_field_tag :company, params[:company], :class => 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :title, mt(:call_record, :title) %>
                                <%= text_field_tag :title, params[:title], :class => 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :status, mt(:call_record, :status) %>
                                <%= select_tag :status, options_for_select(CallRecord::STATUS.to_a.map(&:reverse), params[:status]),
                                               :prompt => default_prompt, :class => 'form-control select2' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :project_id, mt(:call_record, :project_id) %>
                                <%= text_field_tag :project_id, params[:project_id], :class => 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :candidate_id, mt(:call_record, :candidate_id) %>
                                <%= text_field_tag :candidate_id, params[:candidate_id], :class => 'form-control' %>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-back"><%= t('action.close') %></button>
                        <%= submit_tag t('action.search'), :class => 'btn btn-submit' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>