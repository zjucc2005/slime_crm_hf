<div class="card">
    <div class="card-header">
        <h5><i class="fa fa-tags"></i> <%= t('action.edit_model', :model => t(:payment_info)) %></h5>
        <%= link_to fa_icon_tag('close'), 'javascript:history.go(-1);', class: 'card-header-close' %>
    </div>

    <div class="card-body">
        <%= form_for @project_task_cost, url: update_cost_project_task_path(@project_task, project_task_cost_id: @project_task_cost.id) do |f| %>
            <div class="row">
                <div class="col-3 form-group">
                    <%= f.label :price %><span class="text-red">*</span>
                    <%= f.number_field :price, min: 0, step: 0.01, required: true, class: 'form-control' %>
                </div>
                <div class="col-3 form-group">
                    <%= f.label :lijin %>
                    <%= f.number_field :lijin, min: 0, step: 0.01, class: 'form-control' %>
                </div>
            </div>

            <div class="form-group mb-0">
                <%= f.submit t('action.submit'), class: 'btn btn-submit' %>
                <%= link_to t('action.back'), 'javascript:history.go(-1);', class: 'btn btn-back' %>
            </div>
        <% end %>
    </div>
</div>