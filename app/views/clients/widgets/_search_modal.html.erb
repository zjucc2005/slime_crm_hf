<div id="search_wrapper">
    <%= button_tag type: 'button', class: 'btn btn-default', data: { toggle: 'modal', target: '#searchModal'} do %>
        <i class="fa fa-search"></i> <%= content_tag :span, t('action.search'), class: 'd-lg-inline d-none' %>
    <% end %>

    <div id="searchModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><%= t('action.search') %></h4>
                    <button type="button" data-dismiss="modal" class="close">&times;</button>
                </div>

                <%= form_tag request.path, method: :get do %>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :name, mt(:candidate, :name) %>
                                <%= text_field_tag :name, params[:name], class: 'form-control', placeholder: '姓名/昵称' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :phone, mt(:candidate, :phone) %>
                                <%= text_field_tag :phone, params[:phone], class: 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :title, mt(:candidate, :title) %>
                                <%= text_field_tag :title, params[:title], class: 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :job_status, mt(:candidate, :job_status) %>
                                <%= select_tag :job_status, options_for_select(Candidate::JOB_STATUS.to_a.map(&:reverse), params[:job_status]),
                                               prompt: default_prompt, class: 'from-control select2' %>
                            </div>
                            <div class="col-lg-6 col-12 form-group">
                                <%= label_tag :id, mt(:company) %>
                                <%= select_tag :company_id, options_for_select(company_options, params[:company_id]),
                                               prompt: default_prompt, class: 'form-control select2' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :edu_exp, t(:education_info) %>
                                <%= text_field_tag :edu_exp, params[:edu_exp], class: 'form-control' %>
                            </div>
                            <div class="col-lg-3 col-6 form-group">
                                <%= label_tag :client_active, t(:client_active) %>
                                <%= select_tag :client_active, options_for_select([[t(:true), 'true']], params[:client_active]),
                                               prompt: default_prompt, class: 'from-control select2' %>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-back"><%= t('action.close') %></button>
                        <%= submit_tag t('action.search'), :class => 'btn btn-submit' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>